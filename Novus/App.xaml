<Application x:Class="Novus.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Novus"
             StartupUri="MainWindow.xaml"
             Startup="AppStartup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Icons.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Other Styles -->
            <Style x:Key="labelPoppinsRegular" TargetType="Label">
                <Style.Setters>
                    <Setter Property="FontFamily" Value="/Novus;component/Resources/Fonts/#Poppins"/>
                    <Setter Property="Foreground" Value="White"/>
                </Style.Setters>
            </Style>

            <Style x:Key="labelPoppinsSemi" TargetType="Label">
                <Style.Setters>
                    <Setter Property="FontFamily" Value="/Novus;component/Resources/Fonts/#Poppins SemiBold"/>
                    <Setter Property="Foreground" Value="White"/>
                </Style.Setters>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
